TZ=UTC
PORT=3333
HOST=localhost
LOG_LEVEL=info
APP_KEY=
NODE_ENV=development

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=5434
DB_USER=postgres
DB_PASSWORD=postgres
DB_DATABASE=letterbox

# Redis Configuration (required for production SSE, optional for development)
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379

# Session
SESSION_DRIVER=cookie

# Mail Configuration
# For DEVELOPMENT (no domain verification required):
#   - Use onboarding@resend.dev as MAIL_FROM_ADDRESS (Resend's test domain)
#   - Get your .resend.app domain from Resend dashboard â†’ Receiving tab
#   - Set BOOTSTRAP_DOMAIN to your .resend.app domain (e.g., abc123.resend.app)
#   - Use ngrok to expose /webhooks/inbound-email for receiving emails
#
# For PRODUCTION (domain verification required):
#   - Add your domain to Resend and configure DNS (SPF, DKIM, MX records)
#   - Use your verified domain (e.g., noreply@yourdomain.com)
#   - Set BOOTSTRAP_DOMAIN to your verified domain

RESEND_API_KEY=
MAIL_FROM_ADDRESS=onboarding@resend.dev
MAIL_FROM_NAME=Letterbox
MAIL_REPLY_TO_ADDRESS=onboarding@resend.dev
MAIL_REPLY_TO_NAME=Letterbox

# Bootstrap Account
# These values seed the initial account when running: node ace db:seed
#
# BOOTSTRAP_DOMAIN: Your email domain
#   - Development: Use .resend.app domain (e.g., abc123.resend.app)
#   - Production: Use your verified domain (e.g., yourdomain.com)
#
# BOOTSTRAP_ADMIN_MAILBOX: Username/mailbox for the admin user
#   - Will be combined with BOOTSTRAP_DOMAIN to create admin email
#   - Example: "admin" + "abc123.resend.app" = "admin@abc123.resend.app"

BOOTSTRAP_DOMAIN=
BOOTSTRAP_ACCOUNT_NAME=Letterbox
BOOTSTRAP_ADMIN_MAILBOX=admin
BOOTSTRAP_ADMIN_PASSWORD=
BOOTSTRAP_ADMIN_NAME=Admin

# Sysadmin Credentials
# System administrator account (not tied to any specific account/domain)
SYSADMIN_EMAIL=
SYSADMIN_PASSWORD=